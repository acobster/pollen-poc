/* vars and mixins */

highlight-color = #c41027

svg-bg(path)
    background transparent url(path)
    background-repeat no-repeat
    background-size contain

justified()
  display flex
  flex-wrap wrap
  justify-content center

main-heading()
  font-family 'Playfair Display', serif
  font-style normal

secondary-heading()
  font-family 'Playfair Display', serif
  font-style italic


/* base */

body
  width: 95%
  max-width: 50em
  margin: auto
  font-family 'Helvetica Neue', sans-serif

h1
  main-heading()
  color: #600

  > img
    display inline-block
    width: 1.5em
    margin 0 0 -0.4em 0

h2
  secondary-heading()

  nav article &
    main-heading()

h3
  secondary-heading()

header
  margin 1em auto 3em
  text-align center

article
  margin 0 auto 2em

footer nav
  justified()

  & a
    margin 1em

aside
  margin 2em auto
  justified()

  p
    text-align center
    flex 1 100%
    margin 0.3em auto

a
  text-decoration none
  font-weight bold
  color highlight-color

hr
  flex-shrink 0
  content url("/img/tomato.svg")
  border none
  width 2.5em
  margin 2.8em auto 1.4em


main > nav
  margin 2rem
  font-size 0.8em


/* links */

[rel=prev]
  display block
  margin 1em 3em 0 0

  &:before
      content ""
      display inline-block
      width: 1em
      height 1.5em
      margin 0 0.3em -0.3em 0
      svg-bg "/img/left.svg"

[rel=next]
  display block
  margin 1em 0 0 3em
  text-align right
  right 0

  &:after
    content ""
    display inline-block
    width: 1em
    height 1.5em
    margin 0 0 -0.4em 0.4em
    svg-bg "/img/right.svg"


/* misc */

.copyleft
	display: inline-block
	transform: rotate(180deg)
